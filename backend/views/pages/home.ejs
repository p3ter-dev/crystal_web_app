<%- include('../partials/home-header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title><%= title %></title>
</head>
<body>
  <header class="bg-dark text-white text-center py-5 hero-section" style="background-image: url('/images/hero.jpg'); background-size: cover; background-position: center;">
    <div class="container">
      <h1 class="display-4 fw-bold zoomIn">Crystal Car Wash Services</h1>
      <p class="lead">Experience cleanliness like never before. Fast, friendly, and affordable.</p>
      <% if (user) { %>
        <a href="/booking" class="btn btn-warning btn-lg mt-3">Book Now</a>
      <% } else { %>
        <a href="/auth/google" class="btn btn-light btn-lg mt-3" style="background: white; color: #757575; border: 1px solid #ddd; display: inline-flex; align-items: center; justify-content: center;">
          <img src="images/Google_logo.svg.png" alt="Google logo" style="width: 20px; height: 20px; margin-right: 10px;">
          Sign up with Google
        </a>
      <% } %>
    </div>
  </header>

  <section class="features py-5 text-center">
    <div class="container">
      <h2 class="bounceY">Why Choose Us?</h2>
      <div class="row">
        <div class="col-md-4">
            <img src="/images/eco.jpg" alt="Eco-Friendly" class="feature-img img-fluid"">
          <h4 class="mt-3">Eco-Friendly</h4>
          <p>We use environmentally safe products to clean your car.</p>
        </div>
        <div class="col-md-4">
            <img src="/images/car3.jpg" alt="Fast Service" class="feature-img img-fluid">
          <h4 class="mt-3">Fast & Reliable</h4>
          <p>Quick service without compromising quality.</p>
        </div>
        <div class="col-md-4">
            <img src="/images/quality.jpg" alt="Top Quality" class="feature-img img-fluid">
          <h4 class="mt-3">Top Quality</h4>
          <p>We guarantee a sparkling clean car every time.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta py-5 bg-primary text-white text-center">
    <div class="container">
      <h2 class="mb-3">Ready to Shine?</h2>
      <p class="mb-4">Join thousands of happy customers. Book your car wash today.</p>
      <% if(user) { %>
        <a href="/booking" class="btn btn-light btn-lg">Schedule Now</a>
      <% } else { %>
        <a href="/auth/google" class="btn btn-light btn-lg" style="background: white; color: #757575; border: 1px solid #ddd; display: inline-flex; align-items: center; justify-content: center;">
          <img src="images/Google_logo.svg.png" alt="Google logo" style="width: 20px; height: 20px; margin-right: 10px;">
          Sign up with Google
        </a>
      <% } %>
    </div>
  </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

